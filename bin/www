var https = require('https');
var http = require('http');
var _ = require('lodash');
//
//var server = http.createServer(function(req,res){
//  res.writeHead(200);
//  res.end('Hello Http World 1234!');
//});
//
//server.listen(8080);

var RtmClient = require('@slack/client').RtmClient;
var CLIENT_EVENTS = require('@slack/client').CLIENT_EVENTS;
var RTM_EVENTS = require('@slack/client').RTM_EVENTS;
var RTM_CLIENT_EVENTS = require('@slack/client').CLIENT_EVENTS.RTM;
var channels = require('../lib/constants/channels').MyChannels;

var token = process.env.BUZZKILLFEED_SLACKBOT_TOKEN || '';
var channelNames = (process.env.CHANNEL_NAMES || 'blurp').split(",");
var ClickbaitGeneratorUrl = process.env.CLICKBAIT_GENERATOR_URL || '';

var rtm = new RtmClient(token, {logLevel: 'warn'});
var myId;
var myName;
let channelIds = [];

console.log("Starting with ", token, channelNames);
rtm.start();


rtm.on(CLIENT_EVENTS.RTM.AUTHENTICATED, function (rtmStartData) {
  myId = rtmStartData.self.id;
  myName = rtmStartData.self.name;
  console.log(`Logged in as ${myName} of team ${rtmStartData.team.name}, but not yet connected to a channel`);

  for (const c of rtmStartData.channels) {
    if (c.is_member && _.includes(channelNames, c.name)) {
      channelIds.push(c.id)
    }
  }
  console.log("Listening on channels ", channelIds);
});


//{
//  type: 'message',
//  channel: 'C0NHJ7Y76',
//  user: 'U0HLVPL0H',
//  text: 'what?',
//  ts: '1461198104.000003',
//  team: 'T024G6B3K'
// }

rtm.on(RTM_EVENTS.MESSAGE, function (rtmData) {
  //Listens to all `message` events from the team
  var channelId = rtmData['channel'];
  var atMeRegExp = new RegExp(myName);
  console.log("GO", channelId)
  if (rtmData.text.match(atMeRegExp)) {
    if (rtmData.text.match(/clickbait/, 'i')) {
      var params = '?headline_type=listicle';

      var requestUrl = [ClickbaitGeneratorUrl,
                        '/slackbot/generate',
                        params].join('');

      http.get(requestUrl, function (response) {
        var body = '';
        response.on('data', function(d) {
          body += d;
        }).on('end', function() {
          rtm.sendMessage(body, channelId);
        })
      });

    } else {
      rtm.sendMessage('Huh?', channelId);
    }
  } else if (rtmData.text.match(new RegExp(myName, 'i'))) {
    rtm.sendMessage('Are you talking about me?  I\'m kinda stupid right now.', channelId);
  }
});

//rtm.on(RTM_EVENTS.CHANNEL_CREATED, function (message) {
// Listens to all `channel_created` events from the team
//});


// you need to wait for the client to fully connect before you can send messages
rtm.on(RTM_CLIENT_EVENTS.RTM_CONNECTION_OPENED, function (rtmData) {
  //var testChannelID = channels[channelName]['id'];
  for(channel in channelIds) {
    rtm.sendMessage("Buzz Killfeed to the Rescue!", channel, function messageSent(errorResponse) {
      if (errorResponse) {
        console.log(errorResponse);
      }
    });
  }
});
